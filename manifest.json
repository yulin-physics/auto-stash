{
  "manifest_version": 3,
  "name": "AutoStash",
  "version": "1.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pkg/*", "js_helpers.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
